#===============================================================================
# ビルド設定
#===============================================================================
TARGET := GCG
DIST := Dist
BUILD := Build
SOURCE := Source
INCLUDE := Include

CXXFLAGS := -std=c++23 -Wall -O2

#===============================================================================
# ビルドルール読み込み
#===============================================================================
include Rules.mk

#===============================================================================
# デフォルトターゲット
#===============================================================================
.PHONY: all clean run

all: $(OUTPUT)

#===============================================================================
# クリーン
#===============================================================================
clean:
	@echo "Cleaning..."
	@rm -rf $(BUILD) $(OUTPUT)

#===============================================================================
# 実行
#===============================================================================
run: $(OUTPUT)
	@$(DIST)/Test.bat
